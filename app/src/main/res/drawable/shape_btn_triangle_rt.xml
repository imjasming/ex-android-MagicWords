<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/shape_id">
        <rotate
            android:fromDegrees="-45"
            android:pivotX="0"
            android:pivotY="0"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#eb9a9c" />
            </shape>
        </rotate>
    </item>
</layer-list>