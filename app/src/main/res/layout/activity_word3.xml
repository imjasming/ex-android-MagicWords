<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/home_toolbar"
        layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/word3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hello"
        android:background="@drawable/shape_border_90du"
        android:textAlignment="viewStart"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:background="@drawable/shape_border_90du"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/phonetic3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:text="/yinbiao/"
            android:textSize="30sp"
            />

        <ImageView
            android:background="@drawable/shape_border"
            android:id="@+id/listen3"
            android:src="@drawable/ic_volume_up_black_24dp"
            android:layout_weight="1"
            android:layout_width="30sp"
            android:layout_height="40sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/mean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:text="TextView" />

    <LinearLayout
        android:background="@drawable/shape_border_90du"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="例句："
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/sentence3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hello worlda"
        android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/next3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="NEXT"
        android:background="@drawable/shape_border_yyl"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold" />

</LinearLayout>
